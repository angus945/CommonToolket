<Entities>
  
  <Entity id="Entity_A">
    <Name> Entity A </Name>
    <Describe> a basis Entity </Describe>

    <Tags>
      <Tag>TagA</Tag>
      <Tag>TagB</Tag>
      <Tag>TagC</Tag>
    </Tags>

    <Visual>
      <SpriteSheet>testSpriteSheet</SpriteSheet>
      <SpriteSheet>SpriteSheetB</SpriteSheet>
      <SpriteSheet>SpriteSheetC</SpriteSheet>
    </Visual>

    <Audio></Audio>

    <Properties>
      <Prop name="Speed">5.5</Prop>
      <Prop name="Force">10</Prop>
    </Properties>
    
    <!--attach unity component-->
    <Components>
      <Collision id="col"></Collision>
      <Rigidbody id="rig"></Rigidbody>
      <Rendering id="rend" spriteSheet="testSpriteSheet"></Rendering>
      <Animation id="anim" spriteSheet="testSpriteSheet"></Animation>
      <!--<Inventory></Inventory>
      <HealthSystem></HealthSystem>
      <Movement></Movement>
      <Input></Input>-->
    </Components>

    <!--attach lua behavior-->
    <Behavior>
      
      <Script id="AI" script="enemyAI">
        <Function function="Update" type="Frame" call="2"></Function>
      </Script>

      <Script id="Timer" script="timer">
        <Function function="Update" type="Time" call="5.5"></Function>
      </Script>
      
    </Behavior>

    <Listener>
    </Listener>

  </Entity>

  <Entity id="Entity_B">
    <Name> Entity B </Name>
    <Describe> another basis Entity </Describe>

    <Tags>
      <Tag>TagA</Tag>
    </Tags>

    <Visual>
      <SpriteSheet>testSpriteSheet</SpriteSheet>
    </Visual>

    <Behavior>
      <EnemyAI></EnemyAI>
    </Behavior>

    <Listener>
    </Listener>

  </Entity>

</Entities>
