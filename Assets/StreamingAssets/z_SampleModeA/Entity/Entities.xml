<Entities>
  
  <Entity id="Entity_A">
    <Name> Entity A </Name>
    <Describe> a basis Entity </Describe>

    <Tags>
      <Tag>TagA</Tag>
      <Tag>TagB</Tag>
      <Tag>TagC</Tag>
    </Tags>

    <Visual>
      <SpriteSheet>testSpriteSheet</SpriteSheet>
      <SpriteSheet>SpriteSheetB</SpriteSheet>
      <SpriteSheet>SpriteSheetC</SpriteSheet>
    </Visual>

    <Audio></Audio>

    <Properties>
      <Prop name="Speed">5.5</Prop>
      <Prop name="Force">10</Prop>
    </Properties>
    
    <!--attach unity component-->
    <Components>
      <Collision></Collision>
      <Rigidbody></Rigidbody>
      <Rendering spriteSheet="testSpriteSheet"></Rendering>
      <Animation spriteSheet="testSpriteSheet"></Animation>
    </Components>

    <!--attach lua behavior-->
    <Behavior>
      <Script id="AI" script="EntityAI" active="true">
        <Function function="Update" type="Time" call="1"></Function>
      </Script>
    </Behavior>

    <!--register event listener-->
    <Listeners>
      
      <Event name="OnCollide">
        <Action behavior="AI" function="Alert"></Action>
        <Action behavior="AI" function="Alert"></Action>
      </Event>
      
      
    </Listeners>

  </Entity>

  <Entity id="Entity_B">
    <Name> Entity B </Name>
    <Describe> another basis Entity </Describe>

    <Tags>
      <Tag>TagA</Tag>
    </Tags>

    <Visual>
      <SpriteSheet>testSpriteSheet</SpriteSheet>
    </Visual>

    <Behavior>
      <EnemyAI></EnemyAI>
    </Behavior>

    <Listener>
    </Listener>

  </Entity>

</Entities>
